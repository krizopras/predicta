{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    // Uygulamanızın main.py dosyasındaki 'app' objesini çalıştırır.
    // 'main (5).py' dosyanızı Railway'e göndermeden önce 'main.py' olarak yeniden adlandırdığınızdan emin olun.
    "startCommand": "gunicorn main:app --bind 0.0.0.0:$PORT --workers 2 --timeout 120",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
